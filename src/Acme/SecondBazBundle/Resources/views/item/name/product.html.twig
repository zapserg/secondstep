{% extends 'AcmeSecondBazBundle::index.html.twig' %}

{% block title %}Показ продуктов{% endblock %} 

{% block tovar %} 
        <div class="count">
          Общее количество товара:  {{ products.getTotalItemCount }}
        </div>
        <table>
        <tr>
            <th>№ товара</th>
            <th>Название товара</th>
        </tr>
    {% for article in products %}
        <tr {% if loop.index is odd %}class="color"{% endif %}>
            <td>{{ article.id }}</td>
            <td>{{ article.Name }}</td>
        </tr>
    {% endfor %}
        </table>
       
        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(products) }}
        </div>     
{% endblock %}  

  


